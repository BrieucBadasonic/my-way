<div class="popup">
  <div>
    <%= cl_image_tag garden.photo.key, height: 100, width: 150, crop: :fill %>
  </div>
  <div class="container">
    <div class="popup-title">
      <h6><%= garden.name %></h6>
    </div>
    <div>  <%= simple_form_for [@trip, @segment] do |f| %>
      <%= f.association :garden, as: :hidden, input_html: { value: garden.id } %>
      <%= f.input :destination, as: :hidden, input_html: { value: garden.address } %>
      <%= f.input :start_latitude, as: :hidden %>
      <%= f.input :start_longitude, as: :hidden %>
      <%= f.button :submit, "Select", class: "btn primary-btn primary-btn-popup" %>
      <% end %>
    </div>
  </div>

</div>



