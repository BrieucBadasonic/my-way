<div class="container-garden-show">
  <div class="card-garden">
    <%= cl_image_tag @garden.photo.key, width: 1140, height: 400, class: "img-garden", crop: :fill %>
  </div>

  <div class="show-garden-title">
    <h2><%= @garden.name %></h2>
    <div class="container">
      <div class="row-facilities">
        <% @facilities.each do |facility| %>
          <div class="garden-chip col-3">
              <% if facility.image.attached? %>
                <div class="garden-chip-img">
                  <%= cl_image_tag facility.image.key %>
                </div>
                <div class="facility-text">
                  <%= facility.name %>
                </div>
              <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="garden-description">
    <p><%= @garden.description %></p>
  </div>
  <% if @trip %>
    <div>  <%= simple_form_for [@trip, @segment] do |f| %>
        <%= f.association :garden, as: :hidden, input_html: { value: @garden.id } %>
        <%= f.input :destination, as: :hidden, input_html: { value: @garden.address } %>
        <%= f.button :submit, "Select", class: "btn primary-btn primary-btn-view-page-buttons" %>
        <% end %>
    </div>
  <% end %>

  <div>
    <%= link_to "Back", :back, data: {turbolinks: "false"}, class: "btn primary-btn primary-btn-view-page-buttons" %>
    </div>
</div>




